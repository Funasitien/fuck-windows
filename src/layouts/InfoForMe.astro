---
interface Props {
  title: string;
  description: string;
  img?: string;
  body: string;
  href?: string;
  button: string;
}

const { title, description, img, body, href, button } = Astro.props;

import Meta from "./Meta.astro";
---

<!doctype html>
<html lang="en" class="overflow-hidden">
  <head>
    <Meta />
    <title>{title}</title>
  </head>
  <body>
    <section class="bg-white dark:bg-gray-900 min-h-screen">
      <div
        class="min-w-screen pt-20 text-gray-500 sm:text-lg dark:text-gray-400 flex flex-col items-center">
        <h2
          class="text-center m-4 text-4xl tracking-tight font-bold text-gray-900 dark:text-white">
          {title}
        </h2>
        <p class="my-4 mx-4 lg:mx-32">{description}</p>
        {
          img ? (
            <img
              src={img}
              class="object-cover w-64 h-28 lg:w-48 lg:h-32 rounded-lg mb-4"
            />
          ) : (
            ""
          )
        }
        <p class="font-light mb-4 mx-4 lg:mx-32 text-center" set:html={body} />
        {
          href ? (
            <a
              class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
              href={href}>
              {button}
            </a>
          ) : (
            ""
          )
        }
      </div>
      <slot />
    </section>
  </body>
</html>
